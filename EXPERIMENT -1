-- create a table
CREATE TABLE CLIENT_MASTER   (
CLIENTNO Varchar(6),
NAME Varchar(20), 
ADDRESS1 Varchar(30), 
ADDRESS2 Varchar(30), 
CITY  Varchar(15), 
PINCODE INTEGER, 
STATE Varchar(15), 
BALDUE decimal(10,2)
);

CREATE TABLE PRODUCT_MASTER (
PRODUCTNO Varchar(6),
DESCRIPTION Varchar(15),
PROFITPERCENT Decimal (4,2),
UNITMEASURE Varchar (10),
QTYONHAND Integer,
REORDERLVL Integer,
SELLPRICE Decimal(8,2),
COSTPRICE Decimal(8,2)
);

CREATE TABLE SALESMAN_MASTER (
SALESMANNO Varchar(6),
SALESMANNAME Varchar(20),
ADDRESS1 Varchar(30),
ADDRESS2 Varchar (30),
CITY Varchar (20),
PINCODE Integer,
STATE Varchar(20),
SALAMT Real,
TGTTOGET Decimal,
YTDSALES Double(6,2),
REMARKS Varchar(60)
);

